{
  "compilerOptions": {
    "lib": ["ES2017"],
    "target": "ES2017",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowJs": true,
    "baseUrl": "./src/",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@imports/*": ["../@types/3/Gjs/*", "../@types/4/Gjs/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./@types/**/*"
  ]
}
